<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Widget.Material3.Chip" parent="Base.Widget.MaterialComponents.Chip" tools:ignore="PrivateResource">
        <item name="enforceTextAppearance">false</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
        <item name="shapeAppearance">?attr/shapeAppearanceCornerSmall</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="android:textColor">@color/m3_chip_text_color</item>
        <item name="closeIconTint">@color/m3_chip_text_color</item>
        <item name="chipStrokeColor">@color/m3_chip_stroke_color</item>
        <item name="chipSurfaceColor">?attr/colorSurface</item>
        <item name="chipBackgroundColor">@color/m3_chip_background_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/m3_chip_ripple_color</item>
        <item name="checkedIcon">@drawable/ic_m3_chip_checked_circle</item>
        <item name="closeIcon">@drawable/ic_m3_chip_close</item>
        <item name="chipIconSize">@dimen/m3_chip_icon_size</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/m3_chip_state_list_anim
        </item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Chip</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary branding color for the app bar -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <!-- Secondary color for controls, like checkboxes and text fields -->
        <item name="colorSecondary">@color/accentColor</item>
        <item name="mainBackgroundColor">@color/backgroundLight</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="drawerBackgroundColor">@color/drawerBackgroundLight</item>
        <item name="buttonColor">@color/buttonColorLight</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="textColor">@color/black</item>
        <item name="textBackgroundColor">@color/light_gray</item>
    </style>

    <!-- Base application theme for night mode -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding color for the app bar -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkLightColor</item>
        <!-- Secondary color for controls, like checkboxes and text fields -->
        <item name="colorSecondary">@color/accentDarkColor</item>
        <item name="mainBackgroundColor">@color/backgroundDark</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="drawerBackgroundColor">@color/drawerBackgroundDark</item>
        <item name="buttonColor">@color/buttonColorDark</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="textColor">@color/black</item>
        <item name="textBackgroundColor">@color/backgroundLight</item>
    </style>

</resources>